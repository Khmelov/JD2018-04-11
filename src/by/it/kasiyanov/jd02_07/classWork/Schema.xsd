<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://it.by/kasiyanov/xmlschema"
        xmlns:tns="http://it.by/kasiyanov/xmlschema"
        elementFormDefault="qualified">
<element name="Persons">
    <complexType>
        <sequence>
        <element name="Person"
                 type="tns:Person"
                 minOccurs="1"
                 maxOccurs="unbounded">
        </element>
    </sequence>

    </complexType>
</element>
    <complexType name="Person">
        <sequence>
            <element name="Login" type="string"/>
            <element name="Password" type="string"/>
            <element name="Email" type="string"/>
            <element name="Ads" type="tns:Ads"/>
        </sequence>
    </complexType>

    <complexType name="Ads">
        <sequence>
            <element name="Ad"
                     type="tns:Ad"
                     minOccurs="1"
                     maxOccurs="unbounded"></element>
        </sequence>
    </complexType>

    <complexType name="Ad">
        <sequence>
            <element name="Description" type="string"/>
            <element name="Adress" type="string"/>
            <element name="Price" type="tns:Price"/>
            <element name="Area" type="double"/>
            <element name="Floor" type="integer"/>
            <element name="Floors" type="integer"/>
            <element name="Rooms" type="integer"/>
        </sequence>
    </complexType>

    <complexType name="Price">
        <simpleContent>
            <extension base="double">
                <attribute
                    name="currency"
                    type="string"
                    use="required"/>
            </extension>

        </simpleContent>
    </complexType>

</schema>